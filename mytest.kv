		font_size: 40
        #size_hint: .18, 1
        #pos: 1,1
		canvas:
			Color:
				rgba: 0,0,1,.7
			Line:
				circle:(self.center_x, self.center_y, 90, -150, 150)
				width: 15
				cap: 'round'
			Color:
				rgba: 1,1,0,1
			Line:
				circle:(self.center_x, self.center_y, 90, -150, root.num10)
				width: 15
				cap: 'round'


    Button:
		id: btn11
		text: root.val11 +root.unit11
