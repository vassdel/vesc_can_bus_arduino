			Color:
				rgba: 1,1,1,.7
			Line:
				circle:(self.center_x, self.center_y, 90, -150, 150)
				width: 15
				cap: 'round'
			Color:
				rgba: 1,0,0,1
			Line:
				circle:(self.center_x, self.center_y, 90, -150, root.num9)
